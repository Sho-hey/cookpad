- if user_signed_in?
  #side_history{style:"top: 35px;"}
    .title_bar
      %h2 最近見たレシピ
    %ul
      - @histories.each do |recipe|
        %li.recipe
          = link_to recipe_path(recipe), class: "recipe_show" do
            - if recipe.image.present?
              = image_tag(recipe.image ,width: 50, height: 50, class: "side_image")
            - else
              %img.user-avatar__image{ src: "https://assets.cpcdn.com/assets/themes/kitchen/profile.png?fc447fb6420741e008aa9c3e48c426d70c83bc8da7fb1ae949a7b09a446d7cd8",height: "50", width: "50", class: "side_image"}
            %span.history--title
              = recipe.title
            %br
            %p.history--user-name
              by
              %span.history--user-name>
                = recipe.user.name




