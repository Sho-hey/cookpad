.login_wrapper
  %h2 新規登録
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .login_form
      .field
        = f.label :name
        %br/
        = f.text_field :name,class: "login_form_name", autofocus: true, autocomplete: "name"
      .user-image.col-md-2
        %img{ style: "" }
        = f.file_field :avatar,class: "login_form_name"
      .field
        %br/
        = f.email_field :email,class: "login_form_name", autocomplete: "off",placeholder: "メールアドレスを入力してください"
      .field
        %br/
        = f.password_field :password,class: "login_form_name", autocomplete: "off",placeholder: "passwordを入力してください"
      .field
        %br/
        = f.password_field :password_confirmation,class: "login_form_name", autocomplete: "off",placeholder: "もう一度passwordを入力してください"
      .user-name.col-md-12
        %br/
        = f.text_area :profile,class: "login_form_name", placeholder: "Profileを入力してください", size:"30×4"
      .actions
        = f.submit "Sign up"
