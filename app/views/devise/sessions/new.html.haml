.devise_wrapper
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .devise_form
      .field
        = f.label "メールアドレス"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email",class: "devise_form_contents"
      .field.password
        = f.label "パスワード"
        %br/
        = f.password_field :password, autocomplete: "off",class: "devise_form_contents"
      - if devise_mapping.rememberable?
        .field.remember_me
          = f.check_box :remember_me
          = f.label "情報を記憶する"
      .actions
        = f.submit "Log in",class: "deivse_form_submit"
    = render "devise/shared/links"
