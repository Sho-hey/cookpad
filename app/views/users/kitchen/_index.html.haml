#top-wrapper
  #wrapper
    #container
      #contents
        #main
          #kitchen_header
            #header_image_wrapper
              ヘッダー画像（仮）
            .header_bottom
              .user_icon
                アイコン（仮）
              .user_name
                = link_to user_path(@user.id) do
                  = @user.name
                  %span
                    のキッチン
              .feeder_follow_button
                = render partial: 'users/follow', local: { user: @user }
              %ul.follow_status
                %li
                  %a
                    フォロー
                  %span
                    |
                %li
                  %a
                    フォロワー
              .header_profile
                .short
                  短い、短縮版
                  %a#header_profile_more{href: "#"}...
                .full.hidden
                  長い、すべて出す版

          .kitchen_navi
            %ul.kitchen_navi_list
              %li.kitchen_navi_top.selected
                %a
                  トップ
              %li.kitchen_navi_recipe
                %a
                  レシピ
              %li.kitchen_navi_tsukurepo
                %a
                  つくれぽ
              %li.kitchen_navi_kondate
                %a
                  献立
              %li.kitchen_navi_blog
                %a
                  = fa_icon 'link', text: "ブログ"
              %li.kitchen_navi_diary
                %a
                  ごはん日記
          = render "users/kitchen/contents-top"

        #side
          #side_wrapper
            #side_contents
              #side_banner_wrapper
                広告１
              #side_banner_wrapper
                広告２
              #side_opinion
                .box.opinion_box
                  .opinion_title
                    クックパッドへのご意見をお聞かせください
                  .opinion_content
                    .opinion_type
                      %input#opinion_type_default{type:"radio",checked: "checked",name:"opinion_type"}
                      %label{for:"opinion_type_default"}
                        サービスへのご意見・ご要望
                      %br
                      %input#opinion_type_bug{type:"radio",name:"opinion_type"}
                      %label{for:"opinion_type_bug"}
                        機能の不具合
                      %br
                      %input#opinion_type_report{type:"radio",name:"opinion_type"}
                      %label{for:"opinion_type_report"}
                        レシピやつくれぽで気付いた点の報告
                    %textarea
                    .opinion_submit_wrapper
                      %input{type:"submit",value:"クックパッドに意見を送る"}
              #side_help
                %p.help_title
                  お困りの方はこちら
                %p.link_to_help
                  = link_to 'ヘルプ・お問い合わせ'
              #side_banner_wrapper
                広告３
              #side_banner_wrapper
                広告４
        .clear_both
